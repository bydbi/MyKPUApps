<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_kpu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintVertical_bias="0.171">

        <Button
            android:id="@+id/btnInfoPemilu"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="INFORMASI PEMILIHAN UMUM" />

        <Button
            android:id="@+id/btnEntry"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="32dp"
            android:text="Form entri data calon pemilih" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.197">

        <Button
            android:id="@+id/btnInfoPemilih"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="informasi data pemilih" />

        <Button
            android:id="@+id/btnKeluar"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="32dp"
            android:text="keluar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>